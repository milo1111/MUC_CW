<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >  <!-- pressed -->
        <shape
            android:shape="rectangle" >
            />
            <stroke android:width="1dip"
                android:color="@color/colorDeepPeach" />

        </shape>
    </item>
    <item android:state_focused="true"> <!-- focused -->
        <shape android:shape="rectangle"  >
            />
            <stroke android:width="1dip"
                android:color="@color/colorDeepPeach" />
            <solid android:color="@color/colorDeepPeach"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            />
            <stroke android:width="1dip"
                android:color="@color/text_color_default" />
            <gradient android:angle="90"
                android:endColor="@color/colorDeepPeach"
                android:startColor="@color/white" />
        </shape>
    </item>
</selector>